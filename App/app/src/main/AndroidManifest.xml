<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.scavengerhuntapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".RankingsActivity"></activity>
        <activity android:name=".BroadcastActivity" />
        <activity android:name=".CurrentTasksActivity" />
        <activity android:name=".TeamsActivity" />
        <activity android:name=".HuntLandingActivity" />
        <activity android:name=".PremadeTaskListActivity" />
        <activity android:name=".PremadeHuntsActivity" />
        <activity android:name=".CreateHuntActivity" />
        <activity android:name=".PlayerLandingActivity" />
        <activity android:name=".OrganizerLandingActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>