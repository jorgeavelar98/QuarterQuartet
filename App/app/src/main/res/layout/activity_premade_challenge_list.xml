<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PremadeChallengeListActivity">

    <TextView android:id="@+id/challenges_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/challenges_text"
        style="@style/HeadingText"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp">
        <ListView
            android:id="@+id/premade_challenge_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/add_to_hunt_button"/>
        <Button
            android:id="@+id/add_to_hunt_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            style="@style/EmphasisButton"
            android:layout_margin="5dp"
            android:layout_centerHorizontal="true"
            android:text="@string/add_to_hunt_button" />
    </RelativeLayout>
</LinearLayout>