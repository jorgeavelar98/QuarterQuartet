<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrganizerLandingActivity"
    android:orientation="vertical"
    android:gravity="top">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Current Hunt"
        android:textSize="30dp"/>

    <TextView
        android:id="@+id/no_curr_hunts_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No Current Hunt"
        android:textSize="20dp"
        android:visibility="gone"/>

    <ListView
        android:id="@+id/curr_hunts_listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Previous Hunts"
        android:textSize="30dp"/>

    <ListView
        android:id="@+id/previous_hunts_listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/no_prev_hunts_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No Previous Hunts"
        android:textSize="20dp"
        android:visibility="gone"/>

    <Button
        android:id="@+id/create_new_hunt_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create New Hunt" />



    <Button
        android:id="@+id/sign_out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Organizer Sign Out" />

</LinearLayout>