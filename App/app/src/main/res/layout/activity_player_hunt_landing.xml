<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <TextView
        android:id="@+id/hunt_name_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorTextDefault"
        style="@style/HeadingText"
        android:text="Hunt Name" />
    <TextView android:id="@+id/challenges_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/challenges_text"
        style="@style/HeadingText"/>
    <ListView
        android:id="@+id/challenge_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <Button
            android:id="@+id/rankings_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rankings" />
        <Button
            android:id="@+id/announcements_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Announcements" />

        <Button
            android:id="@+id/teams_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Teams" />
    </LinearLayout>

</LinearLayout>