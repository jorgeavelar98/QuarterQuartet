<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HuntLandingActivity">

    <TextView
        android:id="@+id/hunt_landing_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="30dp"
        android:gravity="center"/>

    <Button
        android:id="@+id/teams_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Teams"/>

    <Button
        android:id="@+id/rankings_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rankings"/>

    <Button
        android:id="@+id/challenges_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Challenges"/>

    <Button
        android:id="@+id/submissions_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submissions"/>

    <Button
        android:id="@+id/broadcast_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Broadcast"/>

    <Button
        android:id="@+id/hunt_landing_back_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back"/>


</LinearLayout>