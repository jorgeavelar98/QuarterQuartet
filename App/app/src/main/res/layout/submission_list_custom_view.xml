<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/submission_list_custom_view">


    <RelativeLayout
        android:id="@+id/submission_container"
        android:onClick="clickedSubmissionProcess"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/submission_list_team_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="Team">
        </TextView>

        <TextView
            android:id="@+id/submission_list_challenge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Challenge">
        </TextView>

        <TextView
            android:id="@+id/submission_list_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="Points"></TextView>

    </RelativeLayout>

</LinearLayout>